<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Hypermage_ComponentCustomerHeader::header.phtml</argument>
            </action>
            <arguments>
                <argument name="show_part" xsi:type="string">welcome</argument>
                <argument name="view_model" xsi:type="object">Hypermage\ComponentCustomerHeader\ViewModel\Header</argument>
                <argument name="htmx" xsi:type="object">Hypermage\Core\ViewModel\Htmx</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
